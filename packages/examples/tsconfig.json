{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "outDir": "./lib",
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strict": true,
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "typeRoots": [
            "../../node_modules/@types"
        ]
    },
    "include": [
        "./**/src"
    ]
}