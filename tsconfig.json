{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "ESNext"
        ],
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "skipLibCheck": true
    },
    "include": [
        "./**/src"
    ]
}